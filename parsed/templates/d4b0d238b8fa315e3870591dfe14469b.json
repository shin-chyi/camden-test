{
  "components/common/forms/multiline": "<div class=\"form-field\" id=\"{{id}}\" data-validation=\"{{validation}}\">\r\n    <label class=\"form-label\" for=\"{{id}}_input\">{{label}}\r\n        {{#if required}}\r\n            <small>{{lang 'common.required' }}</small>\r\n        {{/if}}\r\n    </label>\r\n    <textarea name=\"{{name}}\"\r\n              id=\"{{id}}_input\"\r\n              data-label=\"{{label}}\"\r\n              rows=\"{{rows}}\"\r\n              aria-required=\"{{required}}\"\r\n              data-input\r\n              class=\"form-input\"\r\n              {{#if private_id}}data-field-type=\"{{private_id}}\"{{/if}}\r\n    >\r\n        {{value}}\r\n    </textarea>\r\n</div>\r\n"
}
