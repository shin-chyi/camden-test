{
  "components/faceted-search/selected-facets": "<div class=\"facetedSearch-refineFilters sidebarBlock\">\r\n    <h2 class=\"sidebarBlock-heading\">\r\n        {{lang 'search.faceted.selected.title'}}\r\n    </h2>\r\n\r\n    {{#if items}}\r\n        <ul class=\"inlineList inlineList--labels\">\r\n            {{#each items}}\r\n                <li>\r\n                    <a href=\"{{url}}\"\r\n                       class=\"facetLabel\"\r\n                       rel=\"nofollow\"\r\n                       data-faceted-search-facet\r\n                    >\r\n                        {{#if facet '===' 'rating'}}\r\n                            {{lang 'search.faceted.selected.rating-label' rating=title}}\r\n                        {{else}}\r\n                            {{{sanitize title}}}\r\n                        {{/if}}\r\n\r\n                        <svg class=\"icon\">\r\n                            <use xlink:href=\"#icon-close\" />\r\n                        </svg>\r\n                    </a>\r\n                </li>\r\n            {{/each}}\r\n        </ul>\r\n    {{else}}\r\n        <p>{{lang 'search.faceted.selected.no-filters'}}</p>\r\n    {{/if}}\r\n\r\n    {{#if remove_all_url}}\r\n        <a href=\"{{remove_all_url}}\" data-faceted-search-facet>\r\n            {{lang 'search.faceted.selected.clear-all'}}\r\n        </a>\r\n    {{/if}}\r\n</div>\r\n"
}
